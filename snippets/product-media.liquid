{%- case media.media_type -%}
  {%- when 'image' -%}
    <!-- 画像 -->
    <img src="{{ media | img_url: 'large' }}" alt="{{ media.preview_image_alt }}" class="w-full h-full object-cover">
  {%- when 'external_video' -%}
    <!-- 動画URL -->
    {{ media | external_video_tag: class: 'w-full h-80 object-cover' }}
  {%- when 'video' -%}
    <!-- 動画 -->
    {{ media | video_tag: controls: true, class: 'w-full h-full object-cover' }}
  {%- when 'model' -%}
    {{ media | model_viewer_tag }}
  {%- else -%}
    {{ media | media_tag }}
{%- endcase -%}